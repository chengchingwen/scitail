{
  "dataset_reader": {
    "type": "simple_overlap",
    "tokenizer": {
      "end_tokens": []
    }
  },
  "train_data_path":
  "SciTailV1.1/tsv_format/scitail_1.0_train.tsv",
  "validation_data_path":
  "SciTailV1.1/tsv_format/scitail_1.0_dev.tsv",
  "model": {
    "type": "simple_overlap",
    "classifier": {
      "input_dim": 3,
      "num_layers": 2,
      "hidden_dims": [3, 2],
      "activations": "relu",
      "dropout": 0.2
    },
    "initializer": [
      [".*linear_layers.*weight", {"type": "xavier_normal"}],
      [".*token_embedder_tokens\._projection.*weight", {"type": "xavier_normal"}]
    ]
  },
  "iterator": {
    "type": "basic",
    "batch_size": 16

  },

  "trainer": {
    "num_epochs": 140,
    "grad_norm": 5,
    "patience": 20,
    "cuda_device": -1,
    "validation_metric": "+accuracy",
    "no_tqdm": false,
    "optimizer": {
      "type": "adam"
    },
    "learning_rate_scheduler": {
      "type": "exponential",
      "gamma": 0.5
    }
  }
}
